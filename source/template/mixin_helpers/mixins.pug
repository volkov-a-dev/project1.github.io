mixin svg(id)
    svg(class='icon icon-' + id)
        use(xlink:href='/assets/img/sprite.svg#' + id)
mixin button(type, href, className, text)
    if type === 'link'
        a(class=`btn btn__link ${className}` href='href')
            +svg('link')
            |#{text}
    else
        a(class=`btn btn__link ${className}` href='href') #{text}

mixin testimonial(data)
    each item in data
        .testimonial__item
            .testimonial__item-text #{item.text}
            .testimonial__item-user
                .testimonial__item-user-photo: img.testimonial__item-user-photo-img(src=item.img alt=item.name)
                .testimonial__item-info
                    .testimonial__item-info-name #{item.name}
                    .testimonial__item-info-description #{item.description}
